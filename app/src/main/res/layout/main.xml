<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:liferay="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@drawable/main_background"
	tools:context=".activity.MainActivity">

	<View
		android:layout_width="@dimen/card_list_vertical_line_width"
		android:layout_height="match_parent"
		android:layout_marginLeft="@dimen/card_list_vertical_line_margin_left"
		android:background="@color/card_list_vertical_line" />

	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:scrollbars="none">

		<LinearLayout
			android:id="@+id/card_list"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:paddingLeft="@dimen/card_list_padding"
			android:paddingRight="@dimen/card_list_padding"
			android:paddingTop="@dimen/card_list_padding_top">

			<com.liferay.alerts.widget.CardView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				liferay:portraitId="10945"
				liferay:text="@string/welcome" />

			<TextView
				android:id="@+id/version"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal"
				android:layout_marginBottom="?android:attr/actionBarSize"
				android:layout_marginTop="@dimen/version_margin_top"
				android:fontFamily="sans-serif-light"
				android:paddingBottom="@dimen/version_padding_bottom"
				android:text="version 0.1.0"
				android:textSize="@dimen/version_text_size" />
		</LinearLayout>
	</ScrollView>

	<FrameLayout
		android:layout_width="match_parent"
		android:layout_height="@dimen/top_bar_height"
		android:alpha="@dimen/top_bar_alpha"
		android:background="@drawable/top_bar_background">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="bottom"
			android:layout_marginBottom="@dimen/top_bar_title_margin_bottom"
			android:layout_marginLeft="@dimen/top_bar_title_margin_left"
			android:text="@string/app_name"
			android:textColor="@android:color/white"
			android:textSize="@dimen/top_bar_title_text_size" />

		<TextView
			android:id="@+id/send"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="bottom|right"
			android:layout_marginBottom="@dimen/top_bar_title_margin_bottom"
			android:layout_marginRight="@dimen/top_bar_title_margin_left"
			android:visibility="invisible"
		    android:text="@string/send"
		    android:textColor="@android:color/white"
		    android:textSize="@dimen/top_bar_send_text_size" />
	</FrameLayout>
</FrameLayout>