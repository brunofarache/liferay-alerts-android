<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

	<ImageView
		android:id="@+id/portrait"
		android:layout_width="@dimen/portrait_width"
		android:layout_height="wrap_content"
		android:layout_marginRight="@dimen/card_list_padding"
		android:layout_marginTop="@dimen/portrait_margin_top" />

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginBottom="@dimen/card_list_padding"
		android:layout_weight="1"
		android:background="@drawable/card_background"
		android:minHeight="@dimen/card_minHeight"
		android:orientation="vertical">

		<TextView
			android:id="@+id/text"
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="1"
			android:fontFamily="sans-serif-light"
			android:padding="@dimen/card_padding"
			android:textColor="@color/card_text"
			android:textSize="@dimen/card_text_size" />

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent">

				<ImageView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:paddingBottom="@dimen/card_badge_padding"
					android:paddingLeft="@dimen/card_badge_padding"
					android:paddingTop="@dimen/card_badge_padding"
					android:src="@drawable/badge_alert" />

				<TextView
					android:id="@+id/timestamp"
					android:layout_width="0dp"
					android:layout_height="match_parent"
					android:layout_marginTop="@dimen/card_timestamp_margin_top"
					android:layout_weight="1"
					android:fontFamily="sans-serif-light"
					android:gravity="center_vertical"
					android:paddingLeft="@dimen/card_timestamp_padding_left"
					android:textColor="@color/card_timestamp"
					android:textSize="@dimen/card_timestamp_text_size" />
		</LinearLayout>
	</LinearLayout>
</merge>